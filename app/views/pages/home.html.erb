<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header landing-modal-title">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title " id="myModalLabel">Start Today!</h4>
      </div>
      <div class="modal-body">

          <%= link_to "Register with Facebook", "players/auth/facebook", id: "sign_in", class: "btn btn-large btn-primary login-fb" %>

          <div class="divider"></div>

          <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= f.error_notification %>

              <h4 class="center spinz-blue login-title">Or register with your email</h4>

              <div class="form-inputs">
                <%= f.input :first_name, required: true, autofocus: true %>
                <%= f.input :last_name, required: true, autofocus: true %>
                <%= f.input :email, required: true, autofocus: true %>
                <%= f.input :password, required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length) %>
                <%= f.input :password_confirmation, required: true %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Register", class: "btn btn-large btn-success login-email" %>
              </div>
            <% end %>

            
      </div>
    </div>
  </div>
</div>



<!-- Modal -->
<div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header landing-modal-title">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title " id="myModalLabel">Log In</h4>
      </div>
      <div class="modal-body">

          <%= link_to "Log in with Facebook", "players/auth/facebook", id: "sign_in", class: "btn btn-large btn-primary login-fb" %>

          <div class="divider"></div>

          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            
            <h4 class="center spinz-blue login-title">Or Log in with your email</h4>
            <div class="form-inputs">
              <div class="home-inputs">
                <%= f.input :email, required: false, autofocus: true %>
              </div>
              <div class="home-inputs">
                <%= f.input :password, required: false %>
              </div>
              <div class="home-inputs">
                <%= f.input :remember_me, as: :boolean, class: "remember" if devise_mapping.rememberable? %>
              </div>
            </div>

            <div class="form-actions">
              <%= f.button :submit, "Log in", class: "btn btn-large btn-success login-email" %>
            </div>
          <% end %>

            
      </div>
    </div>
  </div>
</div>







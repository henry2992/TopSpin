@import "bootstrap-sprockets";
@import "bootstrap";


/***** Global ********/

h1, h2, h3, h4, h5, h6 {
	padding: 0px !important;
	margin: 0px !important;
}


.center{
	text-align: center !important;
}

.white {
	color: #fff;
}

.spinz-blue {
	color: rgb(21,48,93);
}

.spinz-green{
	color: rgb(128,196,59);
}

.spinz-green-bg{
	background-color: rgb(128,196,59);
}

.spinz-blue-bg{
	background-color: rgb(21,48,93);
}


.nav-logo{
	width: 150px;
	margin-top: -10px;
}



/**** Landing Wrapper ***/

.landing-wrapper{
    position: relative;
    /*background: linear-gradient(rgba(0, 0, 0, .5), rgba(0, 0, 0, .7));*/
}

.spinzcity-Slider{
	max-width: 100vw !important;
	height: 400px !important;
}

.spincity-slider-imgs img {
	width: 100% !important;
	height: 400px !important;
}

.ns_firstSlide {
	background: linear-gradient(rgba(0, 0, 0, .5), rgba(0, 0, 0, .7)), url(<%= asset_path('bg1.png')%>) ;    
	background-repeat: no-repeat;
    background-size: cover; 
    background-position: center center; 
}

.ns_slideContainer:nth-child(2){
	background: linear-gradient(rgba(0, 0, 0, .5), rgba(0, 0, 0, .7)), url(<%= asset_path('bg2.png')%>) ;    
	background-repeat: no-repeat;
    background-size: cover; 
    background-position: center center; 
}

.ns_slideContainer:nth-child(3){
	background: linear-gradient(rgba(0, 0, 0, .5), rgba(0, 0, 0, .7)), url(<%= asset_path('bg3.png')%>) ;    
	background-repeat: no-repeat;
    background-size: cover; 
    background-position: center center; 
}

.ns_slideContainer:nth-child(4){
	background: linear-gradient(rgba(0, 0, 0, .5), rgba(0, 0, 0, .7)), url(<%= asset_path('bg4.png')%>) ;    
	background-repeat: no-repeat;
    background-size: cover; 
    background-position: center center; 
}



#logo{
	width: 200px;
	position: absolute;
	z-index: 1000;
}



.ns_slideContent{
	position: relative;
	width: 100%;
	text-align: center;
}

.slider-content {
	position: absolute;
	bottom: 150px;
	left: 0;
    right: 0;

}


.spinzcity-buttons{
	z-index: 1000;
	position: absolute;
	bottom: 10px;
	width: 100%;
	text-align: center;
}


.spinz-btn{
	display: block;
	width: 200px;
	margin: 15px auto;
}

.spinz-btn:hover{
	color: #fff;
}

/***** How it works *****/
.how-it-works{
	padding: 30px 0;	
}


.works-wrapper{
	margin: 35px 0;
}

.work-title-wrapper{
	border-bottom: rgb(128,196,59) 3px solid;
	margin-bottom: 10px;
}

.work-title{
	font-size: 15px;
}
	


.work-img{
	width: 100px;
}



/************ Benefits ****************/

.benefits{
	padding: 30px 0;
}

.benefit-content{
	margin: 25px 0;
}

.benefits-title-wrapper{
	text-align: center;
}


.benefits-title{
	border-bottom: 3px solid rgb(128,196,59);
	display: inline-block;
	margin: 40px auto;
	text-align: center;
}

.benefits-img-wrapper{
	position: relative;
	text-align: center;
}

.benefits-img {
  	width: 100px;
  	text-align: center;
}

.benefits-text{
	/*width: 75%;*/
	/*display: inline-block;*/
}	


/************* About US **********/

.about-us{
	padding: 30px 0;
	height: 100%;
}


.about-us-img-wrapper{
	/*border: 1px solid blue;*/
	margin-top: 20px;
}


.about-us-img{
	width: 100%;

}

/******** Join US ************/


.join {
    background: linear-gradient(rgba(0, 0, 0, .5), rgba(0, 0, 0, .7)), url(<%= asset_path('bg5.png')) ;
    background-repeat: no-repeat;
    background-size: cover; 
    background-position: center center; 
    color: #fff; 
    text-align: center;
    height: 300px;
}

.join-btns{
	margin-top: 100px;
}

/********* Footer *********/

.footer{
	padding: 30px 0;
}
.community-icons{
	text-align: center;
	color: white !important;
}



.community-icons a {
    color: white !important;
}

.social:hover {
    -webkit-transform: scale(1.1);
    -moz-transform: scale(1.1);
    -o-transform: scale(1.1)
}

.social {
    -webkit-transform: scale(0.8);
    -moz-transform: scale(0.8);
    -o-transform: scale(0.8);
    -webkit-transition-duration: 0.5s;
    -moz-transition-duration: 0.5s;
    -o-transition-duration: 0.5s
}

#social-fb:hover {
    color: #3B5998 !important;
}

#social-tw:hover {
    color: #4099FF !important;
}

#social-yt:hover {
    color: #d34836 !important;
}

#social-em:hover {
    color: #f39c12 !important;
}

#social-in:hover {
    color: #3f729b !important;
}



/***************** MEDIA QUERIES ******************/


/* Smartphones (landscape) ----------- */
@media only screen and (min-width : 321px) {

}


/* Tablets (portrait and landscape) ----------- */
@media only screen and (min-width : 768px) {

	.spinz-btn{
		display: inline-block;
	}
}

/* Desktops and laptops ----------- */
@media only screen  and (min-width : 992px) {
	.work-title-wrapper{
		height: 40px;
	}

	.benefits-img-wrapper{
		position: relative;
		text-align: left;
	}

	.benefits-img {
		width: 80%;
		position: absolute;
	  	top: 50%;
	}
}

